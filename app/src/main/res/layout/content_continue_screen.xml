<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.StartScreenActivity"
    tools:showIn="@layout/activity_start_screen"
    android:background="@drawable/glossy_back">

    <TextView
        android:id="@+id/score"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="200dp"
        android:layout_height="78dp"
        android:textColor="@color/startButtonTextColor"
        android:gravity="center" />

    <Button
        android:id="@+id/continueButton"
        android:layout_below="@+id/score"
        android:layout_width="200dp"
        android:layout_height="78dp"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="true"
        android:background="@drawable/roundbutton_green"
        android:text="@string/continue_game"
        android:textColor="@color/continueButtonTextColor"/>

    <Button
        android:id="@+id/quit"
        android:layout_toRightOf="@+id/continueButton"
        android:layout_below="@+id/score"
        android:layout_width="200dp"
        android:layout_height="78dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/roundbutton_green"
        android:text="@string/quit_game"
        android:textColor="@color/continueButtonTextColor"/>

    <Button
        android:id="@+id/save"
        android:layout_toRightOf="@+id/quit"
        android:layout_below="@+id/score"
        android:layout_width="300dp"
        android:layout_height="78dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/roundbutton_green"
        android:text="@string/save_game"
        android:textColor="@color/continueButtonTextColor"/>


</RelativeLayout>
